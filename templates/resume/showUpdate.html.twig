{% extends 'base.html.twig' %}

{% block title %}Hello ResumeController!{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; display: flex; justify-content: center; flex-wrap: wrap;}
    .wrapper code { background: #F5F5F5; padding: 2px 6px;}
    .header { display: flex; justify-content: flex-end; width: 100%;}
    .custom_button {margin-left: 20px; display: flex; text-decoration: none; border: 1px solid black; color: black; padding: 3px 10px 3px 10px; height: 40px; text-align: center; justify-content: center; align-items: center}
    .create_form {width: 200px; display: flex; flex-wrap: wrap; justify-content: center;}
    button[type="submit"] { margin-top: 20px; width: 90px;  height: 40px; font-size: 13pt; border-radius: 10px;}
    input { width: 100%; height: 20px;}
    .create_form_item { margin-top: 10px;}
    h2 {width: 100%; }
    .cancel_button { margin-right: 40px; text-decoration: none; color: black;}
</style>

<div class="wrapper">
    <div class="header">
      <a href="{{ path('logout') }}" class="custom_button">Logout</a>
      <a href="{{ path('resumeList') }}" class="custom_button">My Resume List</a>
    </div>

    <h2>Creating Resume</h2>

    <form action="{{ path('resumeUpdate', {id: resume.resumeId}) }}" method="POST" class="create_form">
      <div class="create_form_item">
        <label for="positionTitle">Position Title</label>
        <input type="text" id="positionTitle" name="positionTitle" placeholder="Title here ..." value="{{ resume.positionTitle }}">
      </div>

      <div class="create_form_item">
        <label for="resumeText">Resume Text</label>
        <textarea name="resumeText" id="resumeText" placeholder="Resume text here ..." cols="60" rows="10" style="resize: none">{{ resume.resumeText }}</textarea>
      </div>


      <div class="create_form_item">
        <a href="{{ path('resumeList') }}" class="cancel_button">Cancel</a>
        <button type="submit">Submit</button>
      </div>
    </form>
</div>
{% endblock %}
