{% extends 'base.html.twig' %}

{% block title %}Hello VacancyController!{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .logout_button { display: flex; text-decoration: none; border: 1px solid black; color: black; width: 90px; height: 40px; text-align: center; justify-content: center; align-items: center}
    h2 { width: 100%; text-align: center;}
    .wrapper { display: flex; justify-content: center; flex-wrap: wrap;}
    .create_form { width: 200px; display: flex; flex-wrap: wrap; justify-content: center;}
    button[type="submit"] { margin-top: 20px; width: 90px;  height: 40px; font-size: 13pt; border-radius: 10px;}
    input { width: 100%; height: 20px;}
    .create_form_item { margin-top: 10px;}
    .cancel_button { margin-right: 40px; text-decoration: none; color: black;}
</style>



  <div class="header">
    <a href="{{ path('logout') }}" class="logout_button">Logout</a>
  </div>
  <div class="wrapper">

    <h2>ShowCreate</h2>

    <form action="/create" method="post" class="create_form">
      <div class="create_form_item">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Title here ...">
      </div>

      <div class="create_form_item">
        <label for="site">Site</label>
        <input type="text" id="site" name="site" placeholder="Site here ...">
      </div>

      <div class="create_form_item">
        <label for="address">Address</label>
        <input type="text" id="address" name="address" placeholder="Address here ...">
      </div>

      <div class="create_form_item">
        <label for="telephone">Phone</label>
        <input type="text" id="telephone" name="telephone" placeholder="Phone here ...">
      </div>

      <div class="create_form_item">
        <label for="description">Description</label>
        <textarea name="description" id="description" placeholder="Description here ..." cols="60" rows="10" style="resize: none"></textarea>
      </div>


      <div class="create_form_item">
        <a href="/" class="cancel_button">Cancel</a>
        <button type="submit">Submit</button>
      </div>
    </form>

  </div>
{% endblock %}

